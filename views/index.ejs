<%- include("partials/header.ejs") %>
<body>
    <h1>Blog Posts</h1>
    <div>
        <% posts.forEach(post => { %>
            <div>
                <h2><%= post.title %></h2>
                <p><%= post.content %></p>
                <a href="/edit/<%= post.id %>">Edit</a>
                <form action="/delete/<%= post.id %>" method="POST" style="display:inline;">
                    <button type="submit">Delete</button>
                </form>
            </div>
        <% }); %>
    </div>
    <a href="/new">Create New Post</a>
</body>
